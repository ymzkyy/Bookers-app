 <h1>Books</h1>
 
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      
    </tr>
  </thead>
</table>
  
  <% @books.each do |book| %>
  <p>
  <tr><%= book.title %></tr>
  <tr><%= book.body %></tr>
  <tr><%= link_to 'Show',  book_path(book.id) %></tr>
  <tr><%= link_to "Edit", edit_book_path(book.id) %></tr>
  <tr><%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></tr>
  </p>
  
<% end %>


<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <p><%= f.submit '投稿' %></p>
<% end %>
 
